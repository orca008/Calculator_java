<?xml version="1.0" encoding="utf-8"?>
<!-- تعریف نسخه و کدگذاری فایل XML -->
<!-- لایه اصلی برنامه ماشین حساب -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <!-- تعریف فضای نام‌های مورد نیاز برای اندروید -->
    <!-- تنظیم عرض و ارتفاع لایه اصلی به اندازه صفحه -->
    <!-- تنظیم جهت چیدمان المان‌ها به صورت عمودی -->

    <!-- نمایشگر ورودی و خروجی ماشین حساب -->
    <include
        layout="@layout/input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <!-- استفاده از لایه نمایشگرهای ورودی و خروجی -->
    <!-- تنظیم عرض نمایشگر به اندازه عرض صفحه -->
    <!-- تنظیم ارتفاع نمایشگر بر اساس محتوای آن -->

    <!-- لایه دکمه‌های ماشین حساب -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="bottom"
        android:background="@color/black"
        android:layout_height="match_parent">
        <!-- تنظیم عرض لایه دکمه‌ها به اندازه عرض صفحه -->
        <!-- تنظیم چیدمان دکمه‌ها در پایین صفحه -->
        <!-- تنظیم رنگ پس‌زمینه به سیاه -->
        <!-- تنظیم ارتفاع لایه به اندازه ارتفاع صفحه -->

        <!-- دکمه‌های عملیات ریاضی -->
        <include
            layout="@layout/buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <!-- استفاده از لایه دکمه‌های عملیات ریاضی -->
        <!-- تنظیم عرض دکمه‌ها به اندازه عرض صفحه -->
        <!-- تنظیم ارتفاع دکمه‌ها بر اساس محتوای آن -->

    </RelativeLayout>

</LinearLayout>